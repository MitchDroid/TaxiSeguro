<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.taxiseguro.CalculatorFragment" >

    <TextView
        android:id="@+id/txt_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/tittle_calculator"
        android:textAppearance="@style/TextAppearance.FontPath.RobotoBold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_dark"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.FontPath.Digital"
            android:textColor="@color/red"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1" >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Calcular"
            fontawesometext:bb_icon_left="fa-money"
            fontawesometext:bb_roundedCorners="true"
            fontawesometext:bb_type="success" >
        </com.beardedhen.androidbootstrap.BootstrapButton>

        <!-- basic text -->

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/lblOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="32sp"
            fontawesometext:fa_icon="fa-github" />
    </RelativeLayout>

</LinearLayout>