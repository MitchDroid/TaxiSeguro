<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FFCC66</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.FontPath.RobotoBold">
         <item name="android:textColor">@color/black</item>
       
    </style>

    <style name="TextAppearance.FontPath.RobotoCondensed" parent="android:TextAppearance">
        <!-- Custom Attr -->
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>
    
     <style name="TextAppearance.FontPath.RobotoBold" parent="android:TextAppearance">
        <!-- Custom Attr -->
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>
    
     <style name="TextAppearance.FontPath.Digital" parent="android:TextAppearance">
        <!-- Custom Attr -->
        <item name="fontPath">fonts/Digital.ttf</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Font.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark_text</item>
    </style>

    <style name="Font.Bold.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Font.TermsConditions">
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Font.BlueTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Font.GreenTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Font.Normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark_text</item>
    </style>

    <style name="Font.BodyBig">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_dark_text</item>
    </style>

    <style name="Font.BodyMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray_dark_text</item>
    </style>

    <style name="Font.MapInfoWindow">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray_dark_text</item>
    </style>

    <style name="Font.BodySmall.LightGreen">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="Font.LoginSubtitleBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="Font.LoginEditTextHint">
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Font.GreenText">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="HorizontalLayout">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HorizontalLayout.horizontal_without_padding">
        <item name="android:background">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HorizontalLayout.horizontal_with_shape">
        <item name="android:background">@drawable/custom_item_shape</item>
        <item name="android:padding">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Font">

        <!-- <item name="android:fontFamily">sans-serif</item> -->
        <item name="android:textSize">16sp</item>
    </style>

</resources>